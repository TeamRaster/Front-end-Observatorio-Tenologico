extends templates/indexT
block main
  #fh5co-page
    header#fh5co-header(role='banner')
      .container
        .header-inner
          h1
            i.sl-icon-mustache
            a(href='#') Observatorio
          nav(role='navigation')
            ul
              li: a.active(href='#') Inicio
              li: a(href='#') Oferta y Demanda
              li: a(href='#') Fondos de Apoyo
              li: a(href='#') I+D+I
              li: a(href='#') Informacion tecnologica
    section#home
      .container
        .row
          .col-md-12.col-sm-12
            h3 Observatorio Tecnologico del Estado de Hidalgo
            h1 UAEH
            hr
            a.smoothScroll.btn.btn-singin(href='#work') Iniciar Sesion
            a.smoothScroll.btn.btn-singup(href='#contact') Registrarse


    //******************************************************************************************************************
    //        Servicios
    //******************************************************************************************************************
    #ofertas
      .container
        .row
          .col-md-6
            a(href="#" class="featured-grid" style="background-image: url(images/image_6.jpg);")
              .desc
                h3 Work with love
                span Web Design
          .col-md-6
            a(href="#" class="featured-grid featured-grid-2" style="background-image: url(images/image_2.jpg);")
              .desc
                h3 Music Lover
                span Application
            .row.grid2
              .col-md-6
                a(href="#" class="featured-grid featured-grid-2" style="background-image: url(images/image_3.jpg);")
                  .desc
                    h3 Travel
                    span Illustration
              .col-md-6
                  a(href="#" class="featured-grid featured-grid-2" style="background-image: url(images/image_8.jpg);")
                      .desc
                          h3 Captured
                          span Photo


    //******************************************************************************************************************
    //        Nuestras ofertas(Ofertas)
    //******************************************************************************************************************
    #gtco-portfolio.gtco-section(style="background-image: url(images/hero_bg.jpg); background-attachment: fixed;")
      .gtco-container
        .row
          .col-md-8.col-md-offset-2.text-center.gtco-heading.animate-box
            h2 Nuestras ofertas
            p En el Observatorio Tecnologico del Estado de Hidalgo tenemos varias ofertas que puedem llegar a interesarte
        .row.row-pb-md
          .col-md-12
            ul#gtco-portfolio-list
              li.two-third.animate-box(data-animate-effect='fadeIn', style='background-image: url(images/img_1.jpg); ')
                a.color-1(href='#')
                  .case-studies-summary
                    span Web Design
                    h2 View the Earth from the Outer Space
              li.one-third.animate-box(data-animate-effect='fadeIn', style='background-image: url(images/img_2.jpg); ')
                a.color-2(href='#')
                  .case-studies-summary
                    span Illustration
                    h2 Sleeping in the Cold Blue Water
              li.one-half.animate-box(data-animate-effect='fadeIn', style='background-image: url(images/img_3.jpg); ')
                a.color-3(href='#')
                  .case-studies-summary
                    span Illustration
                    h2 Building Builded by Man
              li.one-half.animate-box(data-animate-effect='fadeIn', style='background-image: url(images/img_4.jpg); ')
                a.color-4(href='#')
                  .case-studies-summary
                    span Web Design
                    h2 The Peaceful Place On Earth
              li.one-third.animate-box(data-animate-effect='fadeIn', style='background-image: url(images/img_5.jpg); ')
                a.color-5(href='#')
                  .case-studies-summary
                    span Web Design
                    h2 I'm Getting Married
              li.two-third.animate-box(data-animate-effect='fadeIn', style='background-image: url(images/img_6.jpg); ')
                a.color-6(href='#')
                  .case-studies-summary
                    span Illustration
                    h2 Beautiful Flowers In The Air
        .row
          .col-md-4.col-md-offset-4.text-center.animate-box
            a.btn.btn-oferta(href='#') See All Our Works


    //******************************************************************************************************************
    //        Servicios
    //******************************************************************************************************************
    #gtco-features
      .gtco-container
        .row
          .col-md-4.col-sm-4
            .feature-center.animate-box(data-animate-effect='fadeIn')
              span.icon
                i.icon-eye
              h3 Vision
              p Estudios de vigilancia e inteligencia tecnologica
              p: a.btn.btn-primary(href='#') Learn More
          .col-md-4.col-sm-4
            .feature-center.animate-box(data-animate-effect='fadeIn')
              span.icon
                i.icon-command
              h3 Mision
              p Alertas tecnologicas y de mercado
              p: a.btn.btn-primary(href='#') Learn More
          .col-md-4.col-sm-4
            .feature-center.animate-box(data-animate-effect='fadeIn')
              span.icon
                i.icon-power
              h3 Perfil
              p Analisis de perfil tecnologico empresarial
              p: a.btn.btn-primary(href='#') Learn More
    //******************************************************************************************************************
    //        Footer de la pagina
    //******************************************************************************************************************
    #fh5co-footer(role='contentinfo')
      .container
        .row
          .col-md-4.to-animate
            h3.section-title Acerca de Nosotros
            p
              | Es un campo tecnológico virtual que facilita, desarrolla, optimiza la vinculación, comunicación, colaboración entre empresas, instituciones educativas y centros de investigación.
            p.copy-right
              | © 2017 Observatorio Tecnologico del Esatdo de Hidalgo.
              br
              | All Rights Reserved.
              br
              | Designed by Team Raster
          .col-md-4.to-animate
            h3.section-title Nuestra direccion
            ul.contact-info
              li
                i.icon-map-marker
                | Carretera Pachuca-Tulancingo
                | Km. 4.5,. Cd. Universitaria,
                | edificio CEVIDE tercer piso.
              li
                i.icon-phone
                | 01 771 717 2000 ext. 6132
              li
                i.icon-envelope
                a(href='#') administrador.otech@uaeh.edu.mx
              li
                i.icon-globe2
                a(href='#') http://otech.uaeh.edu.mx/
            h3.section-title Contactanos
            ul.social-media
              li: a.facebook(href='#')
                  i.icon-facebook
              li: a.twitter(href='#')
                  i.icon-twitter
              li: a.dribbble(href='#')
                  i.icon-dribbble
              li: a.github(href='#')
                  i.icon-github-alt
          .col-md-4.to-animate
            h3.section-title Envianos tu opinion
            form.contact-form
              .form-group
                label.sr-only(for='name') Name
                input#name.form-control(type='name', placeholder='Name')
              .form-group
                label.sr-only(for='email') Email
                input#email.form-control(type='email', placeholder='Email')
              .form-group
                label.sr-only(for='message') Message
                textarea#message.form-control(rows='7', placeholder='Message')
              .row.center-xs.form-group
                input#btn-submit.btn.btn-send-message.btn-md(type='submit', value='Enviar Mensaje')
